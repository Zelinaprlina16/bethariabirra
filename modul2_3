    <style>
        /* Style tetap sama seperti sebelumnya */
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f0f0f0;
        }
        .form-container {
            background-color: #2c7873;
            padding: 20px;
            border-radius: 8px;
            width: 300px;
        }
        .form-container h2 {
            color: white;
            margin-top: 0;
        }
        input {
            width: 100%;
            padding: 8px;
            margin: 10px 0;
            border: none;
            border-radius: 4px;
        }
        button {
            background-color: #4CAF50;
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
